{
  "restApiRoot": "/api",
  "host": "0.0.0.0",
  "port": 3000,
  "remoting": {
    "context": false,
    "rest": {
      "handleErrors": false,
      "normalizeHttpPath": false,
      "xml": false
    },
    "json": {
      "strict": false,
      "limit": "100kb"
    },
    "urlencoded": {
      "extended": true,
      "limit": "100kb"
    },
    "cors": false
  },
  "client": {
    "domain": "localhost:3001"
  },
  "medDocument": {
    "maxSize": 15,
    "supportedTypes": {
      ".jpg": "image/jpeg",
      ".png": "image/png",
      ".pdf": "application/pdf",
      ".heic": "image/heic"
    }
  },
  "postImage": {
    "maxSize": 15,
    "supportedTypes": {
      ".jpg": "image/jpeg",
      ".png": "image/png",
      ".pdf": "application/pdf",
      ".heic": "image/heic"
    }
  },
  "postFile": {
    "maxSize": 15,
    "supportedTypes": {
      ".jpg": "image/jpeg",
      ".png": "image/png",
      ".pdf": "application/pdf",
      ".heic": "image/heic"
    }
  }
}
